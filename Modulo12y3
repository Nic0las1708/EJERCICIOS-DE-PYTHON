        "def send_messages(messages):\n",
        "  sent_messaged= []\n",
        "  for message in messages:\n",
        "    print(f'\\n{message}')\n",
        "    sent_messaged.append(message)\n",
        "  print(f\"\\nLa lista movida es: {sent_messaged}\")"
